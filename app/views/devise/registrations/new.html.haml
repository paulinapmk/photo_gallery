.registration-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Sign up
            %hr
            = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                              :html => {:class => 'form-horizontal' }) do |f|
              = f.error_notification
              .panel-body
                .form-group
                  = f.input :user_name, required: true, autofocus: true, :input_html => { :class => 'input-lg form-control' }
                  = f.input :email, required: true, :input_html => { :class => 'input-lg form-control' }
                  = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                                       :input_html => { :class => 'input-lg form-control' }
                  = f.input :password_confirmation, required: true, :input_html => { :class => 'input-lg form-control' }
                .form-actions
                  = f.button :submit, "Sign up", class: 'btn-lg btn-info btn-block'

